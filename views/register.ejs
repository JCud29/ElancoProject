<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Register</title>
  <meta name="description" content="Elanco Group A">
  <meta name="author" content="Group A">

  <link rel="stylesheet" href="css/index.css">

</head>

<body>
    
    <div class = "mainContainer">


        <div class = "logoContainer"></div>
        <div class = "loginCont">

            <form action="/register" method="POST">

                <p><label for="title">Title:</label>

                    <select name="title" id="title">
                      <option value="Mr">Mr</option>
                      <option value="Mrs">Mrs</option>
                      <option value="Miss">Miss</option>
                      <option value="Ms">Ms</option>
                      <option value="Dr">Dr</option>
                    </select></p>
                
                <p><label for="firstName">First Name:</label>  
                
                    <input type="text" name="firstName" id="firstName" placeholder="Please Enter Your First Name" required> </p>

                <p><label for="lastName">Last Name:</label> 
                
                    <input type="text" name="lastName" id="lastName" placeholder="Please Enter Your Last Name" required> </p>

                <p><label for="yourEmail">Email:</label>  
                
                    <input type="email" name="email" id="email" placeholder="Please Enter Your Email" required> </p>

                <p><label for="address">Address:</label>  
                
                    <input type="text" name="address" id="address" placeholder="Please Enter Your Address" required> </p>
                    
                <p><label for="yourPassword">Password:</label> 
                    
                    <input type="text" name="password" id="password" placeholder="Please Enter Your Password" required> </p>
                        
                                    
               
                <p><button type="submit" id="register">Register</button></p>
                    </form> 
                </div>
                              
        </div>

    </div>
</body>
</html>